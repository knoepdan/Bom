/* Mobile only (media query would not really be necessary as css would be overwritten by later css, but we leave it here for clarity */
@@media (max-width: 640px) {
    .mobileOnly {
        visibility: visible;
    }
    .tabletAndSmaller {
        visibility: collapse;
    }
    .tabletOnly {
        visibility: collapse;
    }
    .tabletAndBigger {
        visibility: collapse;
    }
    .desktopOnly {
        visibility: collapse;
    }

    /* specific */
    .mainContent {

    }
}

/* Mobile and Tablet */
@@media (max-width: 992px) {
    .tabletAndSmaller {
        visibility: visible;
    }

    /* specific */
    .mainContent {

    }
}

/* Tablet */
@@media (min-width: 641px) and (max-width: 992px) {
    .mobileOnly {
        visibility: collapse;
    }
    .tabletOnly {
        visibility: visible;
    }

    /* specific */
    .mainContent {
        background-color: aquamarine;
        margin-left: 6%;
        margin-right: 6%;
    }
}

/* Tablet and desktop*/
