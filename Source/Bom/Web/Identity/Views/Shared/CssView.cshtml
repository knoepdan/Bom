<style>
    /* minimal normalize css stuff*/
    html {
        box-sizing: border-box;
    }

    *,
    *:before,
    *:after {
        box-sizing: inherit;
    }
    /* Extract from normalize.css by Nicolas Gallagher and Jonathan Neal git.io/normalize */
    html {
        -ms-text-size-adjust: 100%;
        -webkit-text-size-adjust: 100%;
    }

    body {
        margin: 0;
    }

    article,
    aside,
    details,
    figcaption,
    figure,
    footer,
    header,
    main,
    menu,
    nav,
    section {
        display: block;
    }

    summary {
        display: list-item;
    }

    audio,
    canvas,
    progress,
    video {
        display: inline-block;
    }

    progress {
        vertical-align: baseline;
    }

    audio:not([controls]) {
        display: none;
        height: 0;
    }

    [hidden],
    template {
        display: none;
    }

    a {
        background-color: transparent;
    }

        a:active,
        a:hover {
            outline-width: 0;
        }

    abbr[title] {
        border-bottom: none;
        text-decoration: underline;
        text-decoration: underline dotted;
    }

    b,
    strong {
        font-weight: bolder;
    }

    dfn {
        font-style: italic;
    }

    mark {
        background: #ff0;
        color: #000;
    }

    small {
        font-size: 80%;
    }

    sub,
    sup {
        font-size: 75%;
        line-height: 0;
        position: relative;
        vertical-align: baseline;
    }

    sub {
        bottom: -0.25em;
    }

    sup {
        top: -0.5em;
    }

    figure {
        margin: 1em 40px;
    }

    img {
        border-style: none;
    }

    code,
    kbd,
    pre,
    samp {
        font-family: monospace, monospace;
        font-size: 1em;
    }

    hr {
        box-sizing: content-box;
        height: 0;
        overflow: visible;
    }

    button,
    input,
    select,
    textarea,
    optgroup {
        font: inherit;
        margin: 0;
    }

    optgroup {
        font-weight: bold;
    }

    button,
    input {
        overflow: visible;
    }

    button,
    select {
        text-transform: none;
    }

    button,
    [type="button"],
    [type="reset"],
    [type="submit"] {
        -webkit-appearance: button;
    }

        button::-moz-focus-inner,
        [type="button"]::-moz-focus-inner,
        [type="reset"]::-moz-focus-inner,
        [type="submit"]::-moz-focus-inner {
            border-style: none;
            padding: 0;
        }

        button:-moz-focusring,
        [type="button"]:-moz-focusring,
        [type="reset"]:-moz-focusring,
        [type="submit"]:-moz-focusring {
            outline: 1px dotted ButtonText;
        }

    fieldset {
        border: 1px solid #c0c0c0;
        margin: 0 2px;
        padding: 0.35em 0.625em 0.75em;
    }

    legend {
        color: inherit;
        display: table;
        max-width: 100%;
        padding: 0;
        white-space: normal;
    }

    textarea {
        overflow: auto;
    }

    [type="checkbox"],
    [type="radio"] {
        padding: 0;
    }

    [type="number"]::-webkit-inner-spin-button,
    [type="number"]::-webkit-outer-spin-button {
        height: auto;
    }

    [type="search"] {
        -webkit-appearance: textfield;
        outline-offset: -2px;
    }

        [type="search"]::-webkit-search-decoration {
            -webkit-appearance: none;
        }

    ::-webkit-file-upload-button {
        -webkit-appearance: button;
        font: inherit;
    }
</style>

<style>
    /*--- variables--*/
    :root {
        --default-border: #000;
        --default-font-color: #000;
        --header-bck-color: #000;
        --header-font-color: #fff;
        --nav-bck-color: #fff;
        --nav-font-color: #000;
        --nav-hover-bck-color: #efefef;
        --bom-brown: #fdbb2d;
        --bom-light-grey: rgb(239, 239, 239);
        --bom-dark-grey: #666666;
        --bom-validation-red: #FF0000:
        /* font size */
        --default-font-size: 1rem;
        --title-font-size: 1.15rem;
        --bigtitle-font-size: 1.4rem;
        --secondary-font-size: 0.8rem;
        /* responsive limits (attention, wont work in variables!!)
    -> these variables can therefore not be used in media queries and are mainly just to look up the limits!!
    -> in the future env might be used to centralize these limits
    */
        --mobile-limit-max: 640px;
        --tablet-limit-min: 641px;
        --tablet-limit-max: 992px;
        --desktop-limit-min: 993px;
    }

    /*  basic stuff */
    /*--- general global settings--*/
    html {
        overflow-x: hidden;
        font-size: 16px;
        height: 100%;
        width: 100%;
    }

    body {
        font-family: sans-serif, Verdana;
        color: var(--default-font-color);
        line-height: 1.5;
        font-size: var(--default-font-size, 16px);
        height: 100%;
        width: 100%;
        background-color: #f0f2f4;
    }


    label {
        max-width: 100%;
    }

    input {
        font-size: var(--default-font-size, 1rem);
        background-color: #fff;
        width: 98%;
        max-width: 100%;
        border-radius: 3px;
        border-style: solid;
        margin-bottom: 5px;
    }

    select {
        font-size: var(--default-font-size, 1rem);
        background-color: #fff;
        width: 98%;
        border-radius: 3px;
        border-style: solid;
        margin-bottom: 5px;
    }

    button {
        margin-top: 5px;
        margin-bottom: 5px;
        min-width: 100px;
        max-width: 100%;
        border: solid;
        border-width: 1px;
        border-radius: 2px;
        border-color: var(--bom-dark-grey, darkgray);
    }

    h1 {
        font-size: var(--bigtitle-font-size, 2rem);
    }

    h2 {
        font-size: var(--title-font-size, 2rem);
    }

    hr {
        border: 0;
        border-top: 1px solid #eee;
    }
</style>

<style>

    .cont {
        width: 100%;
        height: 100%;
        display: flex;
        flex-direction: column;
        align-items: stretch;
    }


    /* top */
    .topBar {
        order: 1;
        overflow: hidden;
        display: inline-block;
        width: 100%;
        z-index: 4;
        font-size: 18px !important;
        color: var(--bom-brown, #fdbb2d) !important;
        background-color: #000 !important;
        min-height: 30px;
    }

    .title {
        padding: 8px 16px;
        width: auto;
        border: none;
        display: block;
        outline: 0;
    }

    /* Start main content */
    /* ******************************************33 */

    .mainContent {
        order: 2;
        flex-grow: 999;
        margin: 0 auto;
        width: 98%;
        max-width: 960px;
        padding: 4px;
    }

    footer {
        background-color: var(--bom-brown, #fdbb2d);
        order: 3;
        align-self: flex-end;
        min-height: 50px;
        width: 100%;
        text-align: center;
        padding: 5px;
        font-size: var(--secondary-font-size, 9px);
    }

        footer a {
            padding: 0 4px;
            text-decoration: unset;
        }

            footer a:hover {
                text-decoration: underline;
            }

    /* Mobile only (media query would not really be necessary as css would be overwritten by later css, but we leave it here for clarity */
    @@media (max-width: 640px) {
        .mobileOnly {
            visibility: visible;
        }

        .tabletAndSmaller {
            visibility: collapse;
        }

        .tabletOnly {
            visibility: collapse;
        }

        .tabletAndBigger {
            visibility: collapse;
        }

        .desktopOnly {
            visibility: collapse;
        }
    }

    /* Mobile and Tablet */
    @@media (max-width: 992px) {
        .tabletAndSmaller {
            visibility: visible;
        }
    }

    /* Tablet */
    @@media (min-width: 641px) and (max-width: 992px) {
        .mobileOnly {
            visibility: collapse;
        }

        .tabletOnly {
            visibility: visible;
        }
    }

    /* Tablet and desktop*/
    @@media (min-width: 641px) {
        .tabletAndBigger {
            visibility: visible;
        }
    }

    /* Desktop*/
    @@media (min-width: 993px) {
        .mobileOnly {
            visibility: collapse;
        }

        .tabletAndSmaller {
            visibility: collapse;
        }

        .tabletOnly {
            visibility: collapse;
        }

        .desktopOnly {
            visibility: visible;
        }
    }
</style>

